# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Set default charset
[*.py]
charset = utf-8

# 2 space indentation
[*.{py,sh}]
indent_style = space
indent_size = 2
